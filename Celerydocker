FROM python:3.6

RUN apt-get update && \
    apt-get install -y

COPY . /app

RUN pip3 install --upgrade pip && \
    pip3 install -r /app/requirements.txt

WORKDIR /app

RUN python manage.py makemigrations && \
    python manage.py migrate

ENTRYPOINT celery -A mined worker --concurrency=20 --loglevel=info
